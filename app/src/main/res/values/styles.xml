<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <!-- Style for each category -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dimen_12dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_12dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_12dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_12dp</item>
        <item name="android:padding">@dimen/dimen_50dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for title -->
    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_12dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_12dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_12dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_12dp</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnimeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#42d1f4</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <style name="OldSchoolTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#e50606</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <style name="DanceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#dd26f2</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <style name="VideoGamesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#17d627</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <style name="LatinoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#b7b710</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <style name="FilmsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#342f7a</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

</resources>
