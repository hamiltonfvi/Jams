<?xml version="1.0" encoding="utf-8"?><!--Layout for a single list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/album_image_view"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/color_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="lutti" />

        <TextView
            android:id="@+id/artist_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="@android:color/white"
            tools:text="one" />

    </LinearLayout>

    <Button
        android:id="@+id/tune_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/button_size"
        android:minWidth="@dimen/button_size"
        android:onClick="playTune"
        android:text="@string/play"
        android:gravity="left|center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>